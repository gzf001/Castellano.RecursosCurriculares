@using RecursoCurricular.Web.UI.Helpers

@model RecursoCurricular.Web.UI.Areas.BasesCurriculares.Models.Unidad

@{
    ViewBag.Title = "Unidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/jqueryUIcss1121")

<div id="form" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Unidades</span>
        </div>
        <div class="form-horizontal">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.TipoEducacion.Nombre, new { @for = "tipoEducacion", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.TipoEducacion.Nombre, RecursoCurricular.Educacion.TipoEducacion.TiposEducacion, new { @id = "tipoEducacion", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Grado.Nombre, new { @for = "grado", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Grado.Nombre, RecursoCurricular.Educacion.Grado.DefaultItem, new { @id = "grado", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sector", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Sector.Nombre, RecursoCurricular.Educacion.Sector.DefaultItem, new { @id = "sector", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center-block col-md-12">
        <div class="panel panel-visible">
            <div class="panel-body pn">
                <table class="table table-striped table-hover" id="gridView" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="divForm" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Unidades</span>
        </div>
        <form id="unidadForm" method="post">

            @Html.Hidden("unidadId")

            @Html.AntiForgeryToken()

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-12">
                        <div class="section row">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.TipoEducacion.Nombre, new { @for = "tipoEducacionCodigo", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.TipoEducacion.Nombre, new { @class = "textBoxDisabled", @id = "tipoEducacionCodigo", @disabled = true })
                                </label>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.Grado.Nombre, new { @for = "gradoCodigo", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Grado.Nombre, new { @class = "textBoxDisabled", @id = "gradoCodigo", @disabled = true })
                                </label>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sectorId", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Sector.Nombre, new { @class = "textBoxDisabled", @id = "sectorId", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Numero, new { @for = "numero", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Numero, new { @class = "textBoxDisabled", @id = "numero", @disabled = true })
                                </label>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Nombre, new { @for = "nombre", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Nombre, new { @class = "gui-input", @id = "nombre", @placeholder = "Nombre", @maxLength = "100" })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Proposito, new { @for = "proposito", @class = "field-label" })
                                <label class="field textarea-grow">
                                    @Html.TextAreaFor(x => x.Proposito, new { @class = "gui-textarea", @id = "proposito", @placeholder = "" })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.ConocimientoPrevio, new { @for = "conocimientoPrevio", @class = "field-label" })
                                <label class="field textarea-grow">
                                    @Html.TextAreaFor(x => x.ConocimientoPrevio, new { @class = "gui-textarea", @id = "conocimientoPrevio", @placeholder = "" })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.PalabraClave, new { @for = "palabraClave", @class = "field-label" })
                                <label class="field textarea-grow">
                                    @Html.TextAreaFor(x => x.PalabraClave, new { @class = "gui-textarea", @id = "palabraClave", @placeholder = "" })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div id="accordion">
                                <h3>Habilidades</h3>
                                <div>
                                    <div id="treeHabilidades" class="col-md-12">
                                        @Html.TreeViewHabilidades("habilidades", 2018, 110, 1, new Guid("2271E0EE-6B23-4123-9763-E5B872196ACE"))
                                    </div>
                                </div>
                                <h3>Objetivos de Aprendizaje</h3>
                                <div>
                                    <div id="treeObjetivosAprendizajes" class="col-md-12">
                                        @Html.TreeViewObjetivosAprendizaje("objetivosAprendizajes", 2018, 110, 1, new Guid("2271E0EE-6B23-4123-9763-E5B872196ACE"))
                                    </div>
                                </div>
                                <h3>Actitudes</h3>
                                <div>
                                    <div id="treeActitudes" class="col-md-12">
                                        @Html.TreeViewActitudes("actitudes", 2018, 110, new Guid("2271E0EE-6B23-4123-9763-E5B872196ACE"))
                                    </div>
                                </div>
                                <h3>Conocimientos</h3>
                                <div>
                                    <div id="treeConocimientos" class="col-md-12">
                                        @Html.TreeViewConocimientos("treeConocimientos", 2018, 110, new Guid("2271E0EE-6B23-4123-9763-E5B872196ACE"))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Styles.Render("~/Content/fancytree")
@Scripts.Render("~/Content/jqueryFancyTree")
<script src="~/Content/theme/vendor/plugins/fancytree/extensions/jquery.fancytree.childcounter.js"></script>
@Scripts.Render("~/js/unidades")