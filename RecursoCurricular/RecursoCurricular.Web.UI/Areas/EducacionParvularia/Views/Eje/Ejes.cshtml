@model RecursoCurricular.Web.UI.Areas.EducacionParvularia.Models.Eje

@{
    ViewBag.Title = "Ejes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Ejes de Aprendizaje</span>
        </div>
        <div class="form-horizontal">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.AmbitoExperienciaAprendizaje.Nombre, new { @for = "ambito", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.AmbitoExperienciaAprendizaje.Nombre, RecursoCurricular.BaseCurricular.AmbitoExperienciaAprendizaje.AmbitosExperienciaAprendizaje(Model.Anio), new { @id = "ambito", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.NucleoAprendizaje.Nombre, new { @for = "nucleo", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.NucleoAprendizaje, RecursoCurricular.BaseCurricular.NucleoAprendizaje.DefaultItem, new { @id = "nucleo", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Ciclo.Nombre, new { @for = "ciclo", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Ciclo.Nombre, RecursoCurricular.Educacion.Ciclo.DefaultItem, new { @id = "ciclo", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center-block col-md-12">
        <div class="panel panel-visible">
            <div class="panel-body pn">
                <table class="table table-striped table-hover" id="gridView" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/js/ejes")