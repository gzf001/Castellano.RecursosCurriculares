@model RecursoCurricular.Web.UI.Areas.EducacionParvularia.Models.AprendizajeEsperado

@{
    ViewBag.Title = "AprendizajesEsperados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Aprendizajes Esperados</span>
        </div>
        <div class="form-horizontal">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.AmbitoExperienciaAprendizaje.Nombre, new { @for = "ambito", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.AmbitoExperienciaAprendizaje.Nombre, RecursoCurricular.BaseCurricular.AmbitoExperienciaAprendizaje.AmbitosExperienciaAprendizaje(Model.Anio), new { @id = "ambito", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.NucleoAprendizaje.Nombre, new { @for = "nucleo", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.NucleoAprendizaje, RecursoCurricular.BaseCurricular.NucleoAprendizaje.DefaultItem, new { @id = "nucleo", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Ciclo.Nombre, new { @for = "ciclo", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Ciclo.Nombre, RecursoCurricular.Educacion.Ciclo.DefaultItem, new { @id = "ciclo", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center-block col-md-12">
        <div class="panel panel-visible">
            <div class="panel-body pn">
                <table class="table table-striped table-hover" id="gridView" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Eje</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Nucleos de Aprendizaje</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            @Html.Hidden("aprendizajeEsperadoId")

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.AmbitoExperienciaAprendizaje.Nombre, new { @for = "ambitoCodigo", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.AmbitoExperienciaAprendizaje.Nombre, new { @class = "textBoxDisabled", @id = "ambitoCodigo", @disabled = true })
                        </label>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.NucleoAprendizaje.Nombre, new { @for = "nucleoId", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.NucleoAprendizaje.Nombre, new { @class = "textBoxDisabled", @id = "nucleoId", @disabled = true })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Ciclo.Nombre, new { @for = "cicloCodigo", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Ciclo.Nombre, new { @class = "textBoxDisabled", @id = "cicloCodigo", @disabled = true })
                        </label>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Numero, new { @for = "numero", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Numero, new { @class = "textBoxDisabled", @id = "numero", @disabled = true })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.EjeParvulo.Nombre, new { @for = "eje", @class = "field-label" })
                        <label class="field select">
                            @Html.DropDownListFor(x => x.EjeParvulo.Nombre, RecursoCurricular.BaseCurricular.EjeParvulo.DefaultItem, new { @id = "eje", @class = "form-control" })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Descripcion, new { @for = "descripcion", @class = "field-label" })
                        <label class="field textarea-grow">
                            @Html.TextAreaFor(x => x.Descripcion, new { @class = "gui-textarea", @id = "descripcion", @placeholder = "" })
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/aprendizajesEsperadosParvulos")