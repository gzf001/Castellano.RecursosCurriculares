@model RecursoCurricular.Web.UI.Areas.RecursosCurriculares.Models.ObjetivoTransversal

@{
    ViewBag.Title = "ObjetivoTransversales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Objetivos Transversales</span>
        </div>
        <div class="form-horizontal">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Grado.TipoEducacion.Nombre, new { @for = "tipoEducacion", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Grado.TipoEducacion.Nombre, RecursoCurricular.Educacion.TipoEducacion.TiposEducacion, new { @id = "tipoEducacion", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Grado.Nombre, new { @for = "grado", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Grado.Nombre, RecursoCurricular.Educacion.Grado.DefaultItem, new { @id = "grado", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sector", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Sector.Nombre, RecursoCurricular.Educacion.Sector.DefaultItem, new { @id = "sector", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Unidad.Nombre, new { @for = "unidad", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Unidad.Nombre, RecursoCurricular.RecursosCurriculares.Unidad.DefaultItem, new { @id = "unidad", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center-block col-md-12">
        <div class="panel panel-visible">
            <div class="panel-body pn">
                <table class="table table-striped table-hover" id="gridViewObjetivo" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Aprendizaje Esperado</th>
                            <th>Indicadores</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="objetivoForm" class="admin-form">
    <div class="panel">

        <div class="panel-heading">
            <span class="panel-title">Aprendizajes Esperados</span>
        </div>

        @Html.AntiForgeryToken()

        @Html.Hidden("objetivoId")
        @Html.Hidden("indicadorId")

        <form id="formObjetivo" method="post">
            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Grado.TipoEducacion.Nombre, new { @for = "objetivoTipoEducacion", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Grado.TipoEducacion.Nombre, new { @class = "textBoxDisabled", @id = "objetivoTipoEducacion", @disabled = true })
                        </label>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Grado.Nombre, new { @for = "objetivoGrado", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Grado.Nombre, new { @class = "textBoxDisabled", @id = "objetivoGrado", @disabled = true })
                        </label>
                    </div>

                </div>
                <div class="section row">
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Sector.Nombre, new { @for = "objetivoSector", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Sector.Nombre, new { @class = "textBoxDisabled", @id = "objetivoSector", @disabled = true })
                        </label>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Unidad.Nombre, new { @for = "objetivoUnidad", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Unidad.Nombre, new { @class = "textBoxDisabled", @id = "objetivoUnidad", @disabled = true })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Numero, new { @for = "objetivoNumero", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Numero, new { @class = "textBoxDisabled", @id = "objetivoNumero", @disabled = true })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Descripcion, new { @for = "objetivoDescripcion", @class = "field-label" })
                        <label class="field textarea-grow">
                            @Html.TextAreaFor(x => x.Descripcion, new { @class = "gui-textarea", @id = "objetivoDescripcion", @placeholder = "" })
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
        <div id="indicadorForm" class="admin-form">
            <div class="panel-heading">
                <span class="panel-title">Indicadores</span>
            </div>
            <div class="center-block">
                <div class="panel panel-visible">
                    <div class="panel-body pn">
                        <table class="table table-striped table-hover" id="gridViewIndicador" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Descripción</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Indicadores de Objetivos Transversales</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-12">
                        <div class="section row">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Grado.TipoEducacion.Nombre, new { @for = "tipoEducacionIndicadorCodigo", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Grado.TipoEducacion.Nombre, new { @class = "textBoxDisabled", @id = "tipoEducacionIndicadorCodigo", @disabled = true })
                                </label>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Grado.Nombre, new { @for = "gradoIndicadorCodigo", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Grado.Nombre, new { @class = "textBoxDisabled", @id = "gradoIndicadorCodigo", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sectorIndicadorId", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Sector.Nombre, new { @class = "textBoxDisabled", @id = "sectorIndicadorId", @disabled = true })
                                </label>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Unidad.Nombre, new { @for = "unidadIndicadorId", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Unidad.Nombre, new { @class = "textBoxDisabled", @id = "unidadIndicadorId", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Descripcion, new { @for = "objetivoIndicadorDescripcion", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextAreaFor(x => x.Descripcion, new { @class = "textAreaDisabled", @id = "objetivoIndicadorDescripcion", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.IndicadorItem.Numero, new { @for = "objetivoIndicadorNumero", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.IndicadorItem.Numero, new { @class = "textBoxDisabled", @id = "objetivoIndicadorNumero", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.IndicadorItem.Descripcion, new { @for = "indicadorDescripcion", @class = "field-label" })
                                <label class="field textarea-grow">
                                    @Html.TextAreaFor(x => x.IndicadorItem.Descripcion, new { @class = "gui-textarea", @id = "indicadorDescripcion", @placeholder = "" })
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancelPopUp" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/objetivosTransversales")