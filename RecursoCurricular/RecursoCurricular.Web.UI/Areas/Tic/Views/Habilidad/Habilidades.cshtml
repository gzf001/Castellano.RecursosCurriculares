@model RecursoCurricular.Web.UI.Areas.Tic.Models.HabilidadTic

@{
    ViewBag.Title = "Habilidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Administración de Habilidades T.I.C.</span>
        </div>
        <div class="form-horizontal">
            <div class="row">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.DimensionHabilidadTIC.Nombre, new { @for = "dimension", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.DimensionHabilidadTIC.Nombre, RecursoCurricular.DimensionHabilidadTic.Dimensiones(Model.Anio), new { @id = "dimension", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center-block col-md-12">
        <div class="panel panel-visible">
            <div class="panel-body pn">
                <table class="table table-striped table-hover" id="gridView" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Dimensiones Habilidades T.I.C.</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            @Html.Hidden("habilidadId")

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.DimensionHabilidadTIC.Nombre, new { @for = "dimensionId", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.DimensionHabilidadTIC.Nombre, new { @class = "textBoxDisabled", @id = "dimensionId", @disabled = true })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Numero, new { @for = "numero", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Numero, new { @class = "textBoxDisabled", @id = "numero", @disabled = true })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Nombre, new { @for = "nombre", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "gui-input", @id = "nombre", @placeholder = "Nombre", @maxLength = "150" })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Descripcion, new { @for = "descripcion", @class = "field-label" })
                        <label class="field textarea-grow">
                            @Html.TextAreaFor(x => x.Descripcion, new { @class = "gui-textarea", @id = "descripcion", @placeholder = "Descripcion" })
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/habilidades")