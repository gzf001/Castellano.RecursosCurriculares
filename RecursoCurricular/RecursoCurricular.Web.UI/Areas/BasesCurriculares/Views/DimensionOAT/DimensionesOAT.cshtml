@model RecursoCurricular.Web.UI.Areas.BasesCurriculares.Models.DimensionOAT

@{
    ViewBag.Title = "DimensionesOAT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="panel panel-visible">
        <div class="panel-heading">
            <div class="panel-title hidden-xs">
                <span class="glyphicon glyphicon-tasks"></span>Buscar y Filtrar
            </div>
        </div>
        <div class="panel-body pn">
            <table class="table table-striped table-hover" id="gridView" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Dimensiones Objetivos de Aprendizaje Transversales</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            @Html.Hidden("dimensionId")

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Numero, new { @for = "numero", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Numero, new { @class = "textBoxDisabled", @id = "numero", @disabled = false })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Nombre, new { @for = "nombre", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "gui-input", @id = "nombre", @placeholder = "Nombre", @maxLength = "70" })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Descripcion, new { @for = "descripcion", @class = "field-label" })
                        <label class="field textarea-grow">
                            @Html.TextAreaFor(x => x.Descripcion, new { @class = "gui-textarea", @id = "descripcion", @placeholder = "Descripcion" })
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/dimensionesOAT")