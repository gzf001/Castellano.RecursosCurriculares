@model RecursoCurricular.Web.UI.Areas.EducacionParvularia.Models.PrincipioPedagogico

@{
    ViewBag.Title = "PrincipiosPedagogicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="panel panel-visible">
        <div class="panel-heading">
            <div class="panel-title hidden-xs">
                <span class="glyphicon glyphicon-tasks"></span>Buscar y Filtrar
            </div>
        </div>
        <div class="panel-body pn">
            <table class="table table-striped table-hover" id="gridView" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RecursoCurricular.BaseCurricular.PrincipioPedagogico principioPedagogico in RecursoCurricular.BaseCurricular.PrincipioPedagogico.GetAll(this.Model.Anio))
                    {
                        <tr>
                            <td>
                                @principioPedagogico.Codigo
                            </td>
                            <td>
                                @principioPedagogico.Nombre
                            </td>
                            <td>
                                @principioPedagogico.Detalle
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Scripts.Render("~/js/principiosPedagogicos")