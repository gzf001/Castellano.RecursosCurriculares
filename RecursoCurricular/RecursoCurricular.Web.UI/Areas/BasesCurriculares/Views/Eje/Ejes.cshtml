@model RecursoCurricular.Web.UI.Areas.BasesCurriculares.Models.Eje

@{
    ViewBag.Title = "Ejes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Ejes de Aprendizaje</span>
        </div>
        <div class="form-horizontal">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sector", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Sector.Nombre, RecursoCurricular.Educacion.Sector.Sectores, new { @id = "sector", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center-block col-md-12">
        <div class="panel panel-visible">
            <div class="panel-body pn">
                <table class="table table-striped table-hover" id="gridView" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Nombre</th>
                            <th>Tipos de Educación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Ejes</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            @Html.Hidden("ejeId")

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-6">
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sectorId", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Sector.Nombre, new { @class = "textBoxDisabled", @id = "sectorId", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Numero, new { @for = "numero", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Numero, new { @class = "textBoxDisabled", @id = "numero", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Nombre, new { @for = "nombre", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Nombre, new { @class = "gui-input", @id = "nombre", @placeholder = "Nombre", @maxLength = "70" })
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-sm-12">
                            <fieldset>
                                <legend>Tipos de Educación</legend>
                                <div class="option-group field section">
                                    @foreach (SelectListItem tipoEduccion in Model.TiposEducacion)
                                    {
                                        <label class="option block mt15">
                                            <input type="checkbox" name="SelectedTipoEducacion" value="@tipoEduccion.Value">
                                            <span class="checkbox"></span>@tipoEduccion.Text
                                        </label>
                                    }
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/ejesBasesCurriculares")