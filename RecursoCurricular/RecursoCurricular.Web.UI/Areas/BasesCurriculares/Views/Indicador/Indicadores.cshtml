@model RecursoCurricular.Web.UI.Areas.BasesCurriculares.Models.Indicador

@{
    ViewBag.Title = "Indicadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Indicadores de Objetivos de Aprendizaje</span>
        </div>
        <div class="form-horizontal">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.TipoEducacion.Nombre, new { @for = "tipoEducacion", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.TipoEducacion.Nombre, RecursoCurricular.Educacion.TipoEducacion.TiposEducacion, new { @id = "tipoEducacion", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Grado.Nombre, new { @for = "grado", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Grado.Nombre, RecursoCurricular.Educacion.Grado.DefaultItem, new { @id = "grado", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sector", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Sector.Nombre, RecursoCurricular.Educacion.Sector.DefaultItem, new { @id = "sector", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(x => x.ObjetivoAprendizaje.Eje.Nombre, new { @for = "eje", @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.ObjetivoAprendizaje.Eje.Nombre, RecursoCurricular.BaseCurricular.Eje.DefaultItem, new { @id = "eje", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center-block col-md-12">
        <div class="panel panel-visible">
            <div class="panel-body pn">
                <table class="table table-striped table-hover" id="gridView" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Descripción</th>
                            <th>Indicadores</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="indicadorForm" class="admin-form">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Indicadores de Objetivos de Aprendizaje</span>
        </div>
        @Html.AntiForgeryToken()

        @Html.Hidden("objetivoAprendizajeId")
        @Html.Hidden("indicadorId")

        <div class="panel-body">
            <div class="section row">
                <div class="col-md-12">
                    <div class="section row">
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.TipoEducacion.Nombre, new { @for = "objetivoTipoEducacion", @class = "field-label" })
                            <label class="field select">
                                @Html.TextBoxFor(x => x.TipoEducacion.Nombre, new { @class = "textBoxDisabled", @id = "objetivoTipoEducacion", @disabled = true })
                            </label>
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.Grado.Nombre, new { @for = "objetivoGrado", @class = "field-label" })
                            <label class="field select">
                                @Html.TextBoxFor(x => x.Grado.Nombre, new { @class = "textBoxDisabled", @id = "objetivoGrado", @disabled = true })
                            </label>
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.Sector.Nombre, new { @for = "objetivoSector", @class = "field-label" })
                            <label class="field select">
                                @Html.TextBoxFor(x => x.Sector.Nombre, new { @class = "textBoxDisabled", @id = "objetivoSector", @disabled = true })
                            </label>
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.ObjetivoAprendizaje.Eje.Nombre, new { @for = "objetivoEje", @class = "field-label" })
                            <label class="field select">
                                @Html.TextBoxFor(x => x.ObjetivoAprendizaje.Eje.Nombre, new { @class = "textBoxDisabled", @id = "objetivoEje", @disabled = true })
                            </label>
                        </div>
                    </div>
                    <div class="section row">
                        <div class="col-md-12">
                            @Html.LabelFor(x => x.ObjetivoAprendizaje.Descripcion, new { @for = "objetivoDescripcion", @class = "field-label" })
                            <label class="field textarea-grow">
                                @Html.TextAreaFor(x => x.ObjetivoAprendizaje.Descripcion, new { @class = "textAreaDisabled", @id = "objetivoDescripcion", @disabled = true })
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="center-block col-md-12">
                <div class="panel panel-visible">
                    <div class="panel-body pn">
                        <table class="table table-striped table-hover" id="indicadorGridView" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Descripción</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer text-right">
            <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
            <button type="submit" id="save" class="button btn-primary">Guardar</button>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Indicadores de Objetivos de Aprendizaje</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-12">
                        <div class="section row">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.TipoEducacion.Nombre, new { @for = "tipoEducacionCodigo", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.TipoEducacion.Nombre, new { @class = "textBoxDisabled", @id = "tipoEducacionCodigo", @disabled = true })
                                </label>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Grado.Nombre, new { @for = "gradoCodigo", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Grado.Nombre, new { @class = "textBoxDisabled", @id = "gradoCodigo", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.Sector.Nombre, new { @for = "sectorId", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Sector.Nombre, new { @class = "textBoxDisabled", @id = "sectorId", @disabled = true })
                                </label>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.ObjetivoAprendizaje.Eje.Nombre, new { @for = "ejeId", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.ObjetivoAprendizaje.Eje.Nombre, new { @class = "textBoxDisabled", @id = "ejeId", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.ObjetivoAprendizaje.Descripcion, new { @for = "objetivoDescripcionPopUp", @class = "field-label" })
                                <label class="field textarea-grow">
                                    @Html.TextAreaFor(x => x.ObjetivoAprendizaje.Descripcion, new { @class = "textAreaDisabled", @id = "objetivoDescripcionPopUp", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Numero, new { @for = "numero", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Numero, new { @class = "textBoxDisabled", @id = "numero", @disabled = true })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Descripcion, new { @for = "descripcion", @class = "field-label" })
                                <label class="field textarea-grow">
                                    @Html.TextAreaFor(x => x.Descripcion, new { @class = "gui-textarea", @id = "descripcion", @placeholder = "" })
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="button" id="cancelPopUp" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/indicadores")